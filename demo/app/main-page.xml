<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page"
  xmlns:ui="nativescript-rad-imagepicker">
  <GridLayout rows="auto, auto, *" class="p-20">
    <Label row="0" text="Rad Image Picker" class="t-20 text-center c-black" textWrap="true"/>
    <Button row="1" class="btn btn-primary" text="pick image" tap="{{ pickImage }}" />
    <Image src="{{ chamia }}" />
    <ListView id="listView" row="2" items="{{ images }}">
        <ListView.itemTemplate>
          <Image src="{{ src }}" /> 
        </ListView.itemTemplate>
    </ListView>
  </GridLayout>
</Page>